{
  "type": "object",
  "properties": {
    "layout": {
      "type": "array",
      "items": { "$ref": "#/$defs/tab" }
    }
  },
  "$defs": {
    "tab": {
      "type": "object",
      "required": ["type", "label"],
      "properties": {
        "type": {
          "type": "string",
          "const": "tab"
        },
        "label": {
          "type": "string"
        },
        "elements": {
          "type": "array",
          "minItems": 1,
          "items": {
            "oneOf": [
              { "type": "string" },
              { "$ref": "#/$defs/component" },
              { "$ref": "#/$defs/attribute" }
            ]
          }
        }
      }
    },
    "component": {
      "type": "object",
      "required": ["label", "type"],
      "properties": {
        "type": {
          "type": "string",
          "enum": ["accordion"]
        },
        "label": {
          "type": "string"
        },
        "elements": {
          "type": "array",
          "items": {
            "oneOf": [{ "type": "string" }, { "$ref": "#/$defs/attribute" }]
          }
        }
      }
    },
    "attribute": {
      "type": "object",
      "required": ["name", "type"],
      "properties": {
        "type": {
          "type": "string",
          "const": "attribute"
        },
        "name": {
          "type": "string"
        }
      }
    }
  }
}
